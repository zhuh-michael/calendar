/* KidLogin 样式 */

/* 页面容器 */
.login-page {
  height: 100vh;
  width: 100%;
  background: linear-gradient(135deg, #87CEEB 0%, #98D8E8 50%, #F0E68C 100%);
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
}

/* 星星动画 */
.star {
  position: absolute;
  font-size: 48rpx;
  animation: twinkle 3s ease-in-out infinite;
  opacity: 0.8;
}

.star-1 { top: 10%; left: 10%; animation-delay: 0s; }
.star-2 { top: 20%; right: 15%; animation-delay: 1s; }
.star-3 { top: 60%; left: 20%; animation-delay: 2s; }
.star-4 { bottom: 20%; right: 10%; animation-delay: 0.5s; }
.star-5 { top: 40%; left: 70%; animation-delay: 1.5s; }

@keyframes twinkle {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.2); opacity: 1; }
}

/* 云朵动画 */
.cloud {
  position: absolute;
  font-size: 80rpx;
  animation: float 8s ease-in-out infinite;
  opacity: 0.6;
}

.cloud-1 { top: 15%; left: 5%; animation-delay: 0s; }
.cloud-2 { top: 25%; right: 8%; animation-delay: 3s; }
.cloud-3 { bottom: 15%; left: 15%; animation-delay: 6s; }

@keyframes float {
  0%, 100% { transform: translateY(0px) translateX(0px); }
  33% { transform: translateY(-10px) translateX(5px); }
  66% { transform: translateY(5px) translateX(-5px); }
}

/* 彩虹 */
.rainbow {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 120rpx;
  animation: rainbow-glow 4s ease-in-out infinite;
}

@keyframes rainbow-glow {
  0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.7; }
  50% { transform: translateX(-50%) scale(1.1); opacity: 1; }
}

/* 蝴蝶动画 */
.butterfly {
  position: absolute;
  font-size: 56rpx;
  animation: flutter 6s ease-in-out infinite;
}

.butterfly-1 { top: 30%; left: 80%; animation-delay: 0s; }
.butterfly-2 { top: 50%; right: 80%; animation-delay: 2s; }
.butterfly-3 { bottom: 30%; left: 85%; animation-delay: 4s; }

@keyframes flutter {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  25% { transform: translateY(-5px) rotate(2deg); }
  50% { transform: translateY(-10px) rotate(0deg); }
  75% { transform: translateY(-5px) rotate(-2deg); }
}

/* 登录容器 */
.login-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 20px 60rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
  border: 4rpx solid #FFD700;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.welcome-title {
  font-size: 56rpx;
  margin-bottom: 10rpx;
  background: linear-gradient(45deg, #ff6b35, #f7931e, #ffd700);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: bold;
  display: block;
}

.welcome-subtitle {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
  display: block;
}

.welcome-emoji {
  font-size: 48rpx;
  margin-top: 10rpx;
  animation: emoji-float 3s ease-in-out infinite;
}

@keyframes emoji-float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-3px); }
}

.section-title {
  text-align: center;
  font-size: 40rpx;
  margin-bottom: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

/* 角色选择 */
.avatar-selection {
  margin-bottom: 30rpx;
}

.avatar-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.avatar-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  border-radius: 25rpx;
  background: linear-gradient(135deg, #FFF 0%, #F8F9FA 100%);
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  width: 180rpx;
}

.avatar-card.selected {
  border-color: #ff6b35;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(247, 147, 30, 0.1));
  transform: scale(1.05);
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 10rpx;
}

.avatar-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.avatar-glow {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #ff6b35, #f7931e);
  opacity: 0.3;
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  0% { opacity: 0.3; transform: scale(1); }
  100% { opacity: 0.6; transform: scale(1.1); }
}

.decoration-stars {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.decoration-star {
  position: absolute;
  font-size: 32rpx;
  animation: sparkle 2s ease-in-out infinite;
}

.decoration-star.star-1 {
  top: 10rpx;
  right: 10rpx;
  animation-delay: 0s;
}

.decoration-star.star-2 {
  top: 30rpx;
  right: 30rpx;
  animation-delay: 1s;
}

@keyframes sparkle {
  0%, 100% { transform: scale(0.8) rotate(0deg); opacity: 0.7; }
  50% { transform: scale(1.2) rotate(180deg); opacity: 1; }
}

.kid-name {
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
  font-size: 28rpx;
}

.kid-stars {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

/* 密码输入区域 */
.password-section {
  text-align: center;
}

.selected-avatar {
  margin-bottom: 30rpx;
}

.selected-avatar-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  border: 6rpx solid #ff6b35;
}

.selected-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.enter-button {
  background: linear-gradient(45deg, #ff6b35, #f7931e);
  border: none;
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  white-space: nowrap;
  width: auto;
  min-width: 400rpx;
}

.password-form {
  text-align: center;
}

.password-avatar {
  margin-bottom: 30rpx;
}

.password-avatar-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.password-input {
  width: 100%;
  padding: 36rpx 30rpx;
  border: 4rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 40rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  background: #fff;
  height: 110rpx;
  text-align: left;
}

.password-input:focus {
  border-color: #ff6b35;
  outline: none;
}

.login-button {
  width: 100%;
  background: linear-gradient(45deg, #ff6b35, #f7931e);
  border: none;
  color: white;
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.back-button {
  border: none;
  color: #666;
  font-size: 28rpx;
  background: transparent;
}
