/* KidDashboard 样式 */

/* 页面容器 */
.kid-dashboard {
  min-height: 100vh;
  background: linear-gradient(135deg, #87CEEB 0%, #98D8E8 50%, #F0E68C 100%);
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* 顶部栏 */
.header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
}

.user-info-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 头像区域 */
.avatar-section {
  flex-shrink: 0;
}

.avatar-frame {
  position: relative;
  padding: 6rpx;
  border-radius: 50%;
}

/* 游戏风格头像边框 */
.avatar-frame.bronze {
  background: linear-gradient(135deg, #cd7f32, #8B4513);
  box-shadow: 0 0 0 4rpx rgba(205, 127, 50, 0.3);
}

.avatar-frame.silver {
  background: linear-gradient(135deg, #e8e8e8, #a0a0a0);
  box-shadow: 0 0 0 4rpx rgba(192, 192, 192, 0.4);
}

.avatar-frame.gold {
  background: linear-gradient(135deg, #ffd700, #daa520);
  box-shadow: 0 0 0 4rpx rgba(255, 215, 0, 0.5), 0 0 30rpx rgba(255, 215, 0, 0.3);
}

.avatar-frame.diamond {
  background: linear-gradient(135deg, #b9f2ff, #00bcd4, #009688);
  box-shadow: 0 0 0 4rpx rgba(185, 242, 255, 0.6), 0 0 40rpx rgba(0, 199, 209, 0.4);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  display: block;
}

/* 等级徽章 */
.level-badge-mini {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  background: linear-gradient(45deg, #FF6B35, #FF8C00);
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 4rpx solid #fff;
  white-space: nowrap;
}

/* 用户信息列 */
.user-info-col {
  flex: 1;
  min-width: 0;
}

/* 日期选择器区域 */
.date-picker-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.date-picker-btn {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(45deg, #FF9800, #F57C00);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 152, 0, 0.3);
}

.date-icon {
  font-size: 40rpx;
}

.date-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 第一行：名字 + 称号 */
.name-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 0;
}

.user-title {
  font-size: 24rpx;
  color: #666;
}

/* 第二行：星星 + XP + 进度 */
.stats-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.star-icon {
  font-size: 32rpx;
}

.xp-info {
  flex: 1;
}

.xp-text {
  font-size: 24rpx;
  color: #666;
}

.xp-next {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 精简版经验条 */
.exp-bar-mini {
  width: 140rpx;
  background: #e8e8e8;
  height: 12rpx;
  border-radius: 6rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.exp-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B35, #FFD700);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 任务区域 */
.task-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
  display: block;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 40rpx;
  color: #FF9800;
}

.loading-text {
  font-size: 28rpx;
}

.subsection-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 24rpx;
  display: block;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 50rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #E0E0E0;
  transition: all 0.3s ease;
}

.task-card.reviewing {
  border-color: #FF9800;
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.1), rgba(255, 152, 0, 0.05));
}

.task-card.overdue {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(255, 152, 0, 0.05));
  border-color: #FF9800;
}

.task-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.task-reject-reason {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
  color: #ff4444;
  font-size: 24rpx;
}

.task-reward {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #FF9800;
  font-weight: bold;
  font-size: 28rpx;
}

.xp-reward {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.task-time-hint {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

.overdue-hint {
  color: #FF6B35 !important;
}

.complete-btn {
  width: 100rpx;
  min-width: 100rpx;
  height: 100rpx;
  background: linear-gradient(45deg, #4CAF50, #45a049);
  border: none;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(76, 175, 80, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.complete-btn text,
.complete-btn .btn-text {
  font-size: 36rpx;
  line-height: 1;
  color: rgba(255, 255, 255, 0.5);
}

.task-actions {
  margin-left: 16rpx;
}

.review-btn {
  background: #FF9800;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
}

.reviewing-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 12rpx;
}

.clock-icon {
  font-size: 32rpx;
}

.reviewing-text {
  font-size: 24rpx;
  color: #FF9800;
  font-weight: bold;
  margin-top: 8rpx;
}

/* 已完成任务列表 */
.completed-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 50rpx rgba(0, 0, 0, 0.1);
}

.completed-task-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  justify-content: space-between;
}

.success-icon {
  color: #4CAF50;
  font-size: 32rpx;
}

.today-total {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 4rpx solid #FFD700;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #FF9800;
}

.view-evidence-btn {
  margin-left: auto;
  background: #2196F3 !important;
  color: white !important;
  border: none !important;
}

/* 延期任务区域 */
.overdue-tasks {
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 4rpx dashed #FF9800;
}

.overdue-title {
  color: #FF6B35 !important;
}

.overdue-count {
  font-size: 28rpx;
  color: #FF6B35;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-emoji {
  font-size: 80rpx;
  display: block;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* 幸运屋悬浮按钮 */
.floating-lucky-btn {
  position: fixed;
  bottom: 200rpx;
  right: 32rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(45deg, #FFD700, #FFA500);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 50rpx rgba(255, 215, 0, 0.4);
  border: 6rpx solid #FFF;
  z-index: 100;
}

.lucky-icon {
  font-size: 56rpx;
  margin-bottom: 4rpx;
}

.lucky-text {
  font-size: 20rpx;
  font-weight: bold;
  color: #8B4513;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top: 4rpx solid #FFD700;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  z-index: 50;
  padding-bottom: 40rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  border-radius: 20rpx;
  min-width: 120rpx;
}

.nav-item.active {
  background: linear-gradient(45deg, #FFD700, #FFA500);
}

.nav-item.active text {
  color: #8B4513;
  font-weight: bold;
}

.nav-icon {
  font-size: 48rpx;
  margin-bottom: 6rpx;
}

.nav-item text:last-child {
  font-size: 24rpx;
  color: #666;
}

/* 弹框遮罩 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

/* 证据上传对话框 */
.evidence-dialog {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 24rpx;
  z-index: 1001;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.view-evidence-dialog {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 24rpx;
  z-index: 1001;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.dialog-body {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

.dialog-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

/* 任务信息 */
.task-info {
  margin-bottom: 24rpx;
}

.task-info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.task-info-desc {
  font-size: 26rpx;
  color: #666;
}

/* 拒绝理由 */
.reject-reason {
  background: #ffebee;
  border: 2rpx solid #ffcdd2;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #c62828;
  font-size: 26rpx;
}

.reject-icon {
  font-size: 32rpx;
}

/* 上传选项 */
.upload-options {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  padding: 32rpx 0;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  min-width: 240rpx;
  padding: 24rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.camera-btn {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
}

.gallery-btn {
  background: linear-gradient(135deg, #2196F3, #42A5F5);
  color: white;
}

.preview-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  padding: 24rpx 0;
}

.preview-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
  margin: 0;
}

.preview-btn::after {
  border: none;
}

/* 预览区域 */
.preview-section {
  text-align: center;
}

.preview-scroll {
  white-space: nowrap;
  margin-bottom: 24rpx;
}

.preview-grid {
  display: inline-flex;
  gap: 16rpx;
  padding: 16rpx;
}

.preview-item {
  display: inline-block;
}

.evidence-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.preview-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

/* 无证据提示 */
.no-evidence {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.no-evidence-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
}

.no-evidence-text {
  font-size: 28rpx;
}

/* 证据画廊 */
.evidence-scroll {
  max-height: 400rpx;
}

.evidence-gallery {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.evidence-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 16rpx;
}

.evidence-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.evidence-meta {
  text-align: center;
}

.upload-time {
  color: #999;
  font-size: 24rpx;
}

/* 按钮样式 */
.cancel-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
}

.submit-btn {
  background: linear-gradient(45deg, #FF9800, #F57C00);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
}

.replace-btn {
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  width: 100%;
}

/* ==================== 每日打卡弹窗样式 ==================== */
.checkin-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
}

.checkin-dialog {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 30rpx;
  z-index: 2001;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.checkin-header {
  padding: 32rpx;
  text-align: center;
  background: linear-gradient(135deg, #FF6B35, #F7931E);
}

.checkin-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.checkin-body {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

/* 连续打卡 */
.streak-section {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08), rgba(255, 215, 0, 0.08));
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.streak-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.streak-icon {
  font-size: 36rpx;
}

.streak-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.streak-count {
  background: linear-gradient(45deg, #FF6B35, #FF8C00);
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.streak-track {
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.streak-progress {
  height: 100%;
  background: linear-gradient(45deg, #FF6B35, #FFA500);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.streak-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 4rpx;
}

.streak-day {
  font-size: 22rpx;
  color: #999;
  width: 40rpx;
  text-align: center;
}

.streak-day.active {
  color: #FF6B35;
  font-weight: bold;
}

.streak-hint {
  text-align: center;
  font-size: 24rpx;
  color: #FF6B35;
  margin-top: 12rpx;
  font-weight: 500;
}

/* 打卡预览 */
.checkin-preview {
  text-align: center;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 107, 53, 0.1));
  border-radius: 20rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.preview-rewards {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.preview-star {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: bold;
}

.preview-xp {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 打卡鼓励语 */
.checkin-encourage {
  text-align: center;
  padding: 40rpx 20rpx;
}

.encourage-emoji {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.encourage-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 打卡按钮 */
.checkin-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.checkin-confirm-btn {
  background: linear-gradient(45deg, #FF9800, #F57C00);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.checkin-done-btn {
  background: linear-gradient(45deg, #4CAF50, #66BB6A);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  width: 100%;
}

/* ==================== 每日打卡弹窗样式 ==================== */
.checkin-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
}

.checkin-dialog {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 30rpx;
  z-index: 2001;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.checkin-content {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

.checkin-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

/* 连签进度条样式 */
.streak-bar-section {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08), rgba(255, 215, 0, 0.08));
  border-radius: 24rpx;
  padding: 24rpx;
